<div class="w-100 mx-5 mt-2">
    <div>
        <h2 class="display-5 mt-2 mb-3">Hostel Applications </h2>
    <table class="table">
        <thead class="table-light">
        <tr>
            <th scope="col">Name
            </th>
            <th scope="col">Gender
            </th>
            <th scope="col">Hostel
            </th>
            <th scope="col">Status
            </th>
            <th scope="col" class="text-center">Action</th>
        </tr>
        </thead>
        <tbody>
        <% applications.forEach((application, i)=>{ %>
            <tr>
                <td class="text-break"><span
                            class="d-md-none w-bold">Name : </span><%= application.user.profile.firstName %></td>
                <td class="text-break"><span
                            class="d-md-none w-bold">Gender : </span><%= application.user.profile.gender %></td>
                <td class="text-break"><span
                            class="d-md-none w-bold">Hostel : </span><%= application.hostel.hostelName %></td>
                <td class="text-break"><span
                            class="d-md-none w-bold">Application Status : </span><%= application.status %></td>
                <td class="text-break d-flex justify-content-around"><a class="btn btn-primary"
                                                                        href="./applications/review/<%= application._id %>">View</a>
                    <a class="btn btn-success" href="./applications/review/<%= application._id %>">Accept</a>
                    <a class="btn btn-danger" href="./applications/review/<%= application._id %>">Reject</a></td>
            </tr>
        <% }) %>

        </tbody>

    </table>


