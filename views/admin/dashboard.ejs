<%- include('./partials/header.ejs') %>
<%- include('./partials/navbar.ejs') %>
<main>
    <%- include('./partials/sidebar.ejs') %>
    <div class="content">
        <div class="container-fluid">
    <div class="row mb-5">
        <div class="col-md-3">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <div class="text-muted">
                        Total Users
                    </div>
                    <h4 ><%=stats.userCount%></h4>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <div class="text-muted">
                        Pending Applications
                    </div>
                    <h4><%=stats.appCount%></h4>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <div class="text-muted">
                        Residents Living
                    </div>
                    <h4><%=stats.seatCount-stats.emptySeatCount%></h4>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <div class="text-muted">
                        Available Seats
                    </div>
                    <h4><%=stats.emptySeatCount%></h4>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header"><h4>Residents</h4></div>
                <div class="card-body">
                    <table id="residents_table" class="table table-bordered table-striped pt-2" >
                        <thead>
                        <tr  class="m-5">
                            <th scope="col">Name
                            </th>
                            <th scope="col">Gender
                            </th>
                            <th scope="col">Seat
                            </th>
                            <th scope="col">Hostel
                            </th>
                            <th scope="col" class="text-center w-25">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% seats.forEach((seat, i)=>{ %>
                            <tr>
                                <td class="text-break"><span
                                            class="d-md-none w-bold">Name : </span><%= seat.resident.profile.firstName %></td>
                                <td class="text-break"><span
                                            class="d-md-none w-bold">Gender : </span><%= seat.resident.profile.gender %></td>
                                <td class="text-break"><span
                                            class="d-md-none w-bold">Seat : </span><%= seat.seatName %></td>
                                <td class="text-break"><span
                                            class="d-md-none w-bold">Hostel : </span><%= seat.hostelName %></td>

                                <td class="text-break d-flex justify-content-around"><a class="btn btn-primary"
                                                                                        href="./admin/user/review/<%= seat.resident._id %>">View</a>

                            </tr>
                        <% }) %>

                        </tbody>

                    </table>
                </div>
            </div>
        </div>




    </div>
</div>
       <script>$(document).ready( function () {
               $('#residents_table').DataTable();
           } );</script>
