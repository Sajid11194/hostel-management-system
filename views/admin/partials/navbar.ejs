<div class="container-fluid">
    <nav class="navbar">
        <div class="container-fluid">
            <div class="navbar-brand">Lal House</div>
            <% if(global.user != undefined){ %>
                <div class="d-flex align-items-center ms-auto">
                    <i class="fa-solid fa-user"></i>
                    <span class="mx-2"> <%= global.user.username %></span>
                    <i class="fa-solid fa-right-from-bracket"></i>
                    <a href="/admin/logout" class="mx-1 text-decoration-none">Logout</a>
                </div>
            <% } %>
            <button class="navbar-toggler d-none" data-bs-toggle="sidebar" data-bs-target="#sidebar"><span
                        class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>
    <div class="row">
        <div class="col-lg-2 col-md-4 " id="sidebar">
            <div class="d-flex align-items-center">
                <i class="fa-3x mx-3 fa-solid fa-user "></i>
                <div class="mx-2 mt-3">
                    <a class="text-decoration-none fw-folder" href="http://fb.com">
                        Farhan Sajid
                    </a>
                    <p class="text-success"><%= global.role %></p>
                </div>
            </div>
            <hr>
            <div class="list-group border-5">
                <a href="/admin" class="list-group-item list-group-item border-0 rounded">
                    <i class="text-primary fa-solid fa-folder"></i> Dashboard
                </a>
                <a href="/admin/applications" class="list-group-item active bg-gradient rounded"
                   data-bs-toggle="collapse"
                   data-bs-target="#applications-status" aria-expanded="false">
                    <i class="fa-solid fa-folder"></i> Applications
                </a>
                <div class="collapse ps-2" id="applications-status">
                    <a href="/admin/applications?status=pending" class="list-group-item  border-0 rounded">
                        <i class="text-primary fa-solid fa-folder"></i> Pending
                    </a>
                    <a href="/admin/applications?status=queue" class="list-group-item  border-0 rounded">
                        <i class="text-primary fa-solid fa-folder"></i> On Queue
                    </a>
                    <a href="/admin/applications?status=accepted" class="list-group-item  border-0 rounded">
                        <i class="text-primary fa-solid fa-folder"></i> Accepted
                    </a>
                    <a href="/admin/applications?status=rejected" class="list-group-item  border-0 rounded">
                        <i class="text-primary fa-solid fa-folder"></i> Rejected
                    </a>
                    <a href="/admin/applications" class="list-group-item  border-0 rounded">
                        <i class="text-primary fa-solid fa-folder"></i> All
                    </a>
                </div>

                <a href="/admin/user" class="list-group-item  border-0 rounded">
                    <i class="text-primary fa-solid fa-folder"></i> Users
                </a>
                <a href="#" class="list-group-item  border-0 rounded">
                    <i class="text-primary fa-solid fa-folder"></i> Add Balance
                </a>
            </div>
        </div>

        <div class="col-lg-10  col-md-8 mt-3 content p-3 body-content">
            <% global.success.forEach((message)=>{ %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= message %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% }) %>
            <% global.error.forEach((message)=>{ %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= message %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% }) %>