<section class="dashboard">
    <h1><%= %></h1>
<div class="row text-center">
    <div class="col-lg-3 col-md-6"><div class="alert alert-success"><h3><% if(user.seat){ let details =`Seat : ${user.seat.seatName}<br/>Room : ${user.seat.roomName}<br/>Hostel : ${user.seat.hostelName}`%>
